<section class="card blog-card">
    <div class="card-head">
        <div id='blog' data-blog-id="{{blog.id}}">
            <h2 class="title">{{blog.title}}</h2>
            <h3>by: {{blog.user.username}}</h3>
            <h4>created on: {{format_date blog.createdAt}}</h4>
            {{#if (eq user_id blog.user.id)}}
            <button class="edit-blog">Edit your post</button>
            <button class="delete-blog">Delete your post</button>
            {{/if}}
        </div>
        <div>
        </div>
        <div class="article">{{blog.content}}</div>
    </div>
    <div class="comments">
        {{#each blog.comments as |comment| }}
        {{> blog-comments user_id=../user_id logged_in=../logged_in}}
        {{/each}}
        {{#if logged_in}}
        <button id="add-comment">Add a comment</button>
        <form class="add-comment hidden" id="add-comment-form">
            <label for="new-comment"></label>
            <input type="text" name="comment" id="new-comment" required>
            <input type="hidden" name="blog-id" id="blog-id" data-blog-id="{{blog.id}}">
            <button class="btn btn-primary" type="submit">submit</button>
        </form>
        {{/if}}
    </div>
    </div>
</section>